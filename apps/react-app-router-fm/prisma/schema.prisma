generator client {
  provider = "prisma-client"
  output   = "./generated"
}

generator effect_schemas {
  provider = "pnpm exec prisma-effect-kysely"
  output   = "./generated/effect/schemas"
}

generator effect {
  provider         = "pnpm exec effect-prisma"
  output           = "./generated/effect" // relative to the schema.prisma file, e.g. prisma/generated/effect
  clientImport     = "../client/index.js"
  clientImportPath = "../client.js" // relative to the output path ^here (defaults to "@prisma/client")
  importFileExtension = "js"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id        String  @id @default(uuid())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
}
