{
  "name": "@effectify/solid-effect-atom",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/solid/effect-atom/src",
  "projectType": "library",
  "tags": ["solid"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "packages/solid/effect-atom/src/index.ts",
        "outputPath": "packages/solid/effect-atom/dist",
        "tsConfig": "packages/solid/effect-atom/tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/solid/effect-atom",
            "glob": "README.md",
            "output": "."
          }
        ]
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "lint": {
      "executor": "nx-oxlint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/solid/effect-atom/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
