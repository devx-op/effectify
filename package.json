{
  "name": "@effectify/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "node patch-workspaces.js",
    "format": "biome format --write ./",
    "lint": "biome lint ./",
    "lint:fix": "biome check --write ./",
    "lint-staged": "lint-staged --allow-empty",
    "clean": "rm -rf node_modules dist bun.lock && bun pm cache rm & find . -type d \\( -name 'node_modules' -o -name 'dist' -o -name '.output' -o -name '.vinxi' \\) -prune -exec rm -rf {} + & wait",
    "prepare": "husky"
  },
  "lint-staged": {
    "{apps,packages}/**/*.{ts,tsx,test.ts}": [
      "bun run lint",
      "bun run lint:fix",
      "bun run format"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@nx/esbuild": "21.1.2",
    "@nx/js": "21.1.2",
    "@nx/node": "21.1.2",
    "@nx/vite": "21.1.2",
    "@nx/web": "21.1.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "18.16.9",
    "@vitest/ui": "^3.0.0",
    "esbuild": "0.19.12",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "lint-staged": "15.5.1",
    "nx": "21.1.2",
    "tslib": "^2.3.0",
    "typescript": "5.8.3",
    "verdaccio": "^6.0.5",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/solid/*",
      "packages/node/*"
    ],
    "catalog": {
      "@tailwindcss/vite": "^4.0.6",
      "@tanstack/router-plugin": "^1.109.2",
      "@tanstack/solid-router": "^1.110.0",
      "@tanstack/solid-router-devtools": "^1.109.2",
      "tailwindcss": "^4.0.6",
      "@kobalte/core": "^0.13.10",
      "@tanstack/solid-query": "5.79.0",
      "effect": "3.15.2",
      "@effect/platform": "0.82.3",
      "@effect/platform-node": "0.81.0",
      "solid-js": "1.9.7",
      "mutative": "1.1.0",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^3.3.0",
      "tailwindcss-animate": "^1.0.7",
      "typescript": "5.8.3",
      "vite": "^6.0.11",
      "vite-plugin-solid": "^2.11.2",
      "tslib": "^2.3.0",
      "lucide-solid": "0.488.0",
      "better-auth": "1.2.8",
      "better-sqlite3": "11.10.0",
      "@types/better-sqlite3": "7.6.13"
    }
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "@swc/core",
    "@tailwindcss/oxide",
    "better-sqlite3",
    "core-js",
    "esbuild",
    "msgpackr-extract",
    "nx"
  ]
}
